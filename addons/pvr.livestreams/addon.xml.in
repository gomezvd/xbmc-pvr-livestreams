<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="pvr.livestreams"
  version="@VERSION@"
  name="LiveStreams PVR"
  provider-name="Zoltan Csizmadia">
  <requires>
    <c-pluff version="0.1"/>
    <import addon="xbmc.pvr" version="1.9.0"/>
  </requires>
  <extension
    point="xbmc.pvrclient"
    library_linux="XBMC_LiveStreams_PVR.pvr"
    library_osx="XBMC_LiveStreams_PVR.pvr"
    library_wingl="XBMC_LiveStreams_PVR_win32.dll"
    library_windx="XBMC_LiveStreams_PVR_win32.dll"
    library_android="libXBMC_LiveStreams_PVR.so" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">XBMC PVR addon for LiveStreams XML.</summary>
    <description lang="en">LiveStreams PVR Client supports LiveStreams XML and EPG.</description>
    <disclaimer lang="en">This is unstable software! The authors are in no way responsible for failed playings, incorrect EPG times, wasted hours, or any other undesirable effects.</disclaimer>
    <platform>linux windx wingl osx android</platform>
  </extension>
</addon>
